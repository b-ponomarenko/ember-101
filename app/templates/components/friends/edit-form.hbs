<div class="well">
    <form {{action "save" on="submit"}} class="form-horizontal clearfix">
        {{#if errorMessage}}
            <h2 class="">{{errorMessage}}</h2>
        {{/if}}
        {{input value=model.firstName placeholder="First Name" class="form-control"}}<br>
        {{input value=model.lastName placeholder="Last Name" class="form-control"}}<br>
        {{input value=model.email placeholder="Email" class="form-control"}}<br>
        {{input value=model.twitter placeholder="Twitter" class="form-control"}}<br>
        <div class="pull-right">
            <button {{action "cancel"}} class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </form>
</div>

